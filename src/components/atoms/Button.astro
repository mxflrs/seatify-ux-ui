---
interface Props {
  text: string;
  type?: 'button' | 'submit' | 'reset';
  variant?: 'primary' | 'secondary' | 'outline' | 'danger';
  size?: 'sm' | 'md' | 'lg';
  disabled?: boolean;
  class?: string;
}

const {
  text,
  type = 'button',
  variant = 'primary',
  size = 'md',
  disabled = false,
  class: className,
} = Astro.props;
---

<button
  type={type}
  disabled={disabled}
  class:list={[
    'inline-flex items-center justify-center rounded-full font-thin transition-all duration-200 mx-auto ring-1 ring-white/25 hover:ring-white/50 cursor-pointer',
    {
      'px-3 py-1.5 text-sm': size === 'sm',
      'px-8 py-4 text-base': size === 'md',
      'px-7 py-3.5 text-lg': size === 'lg',
      'bg-black text-white hover:bg-sfv-green-600 hover:text-black': variant === 'primary',
      'bg-gray-600 text-white hover:bg-gray-700 ': variant === 'secondary',
      'border border-blue-600 text-blue-600 hover:bg-blue-50': variant === 'outline',
      'bg-red-600 text-white hover:bg-red-700': variant === 'danger',
      'opacity-50 cursor-not-allowed': disabled,
    },
    className,
  ]}
>
  {text}
</button>

<style>
  button {
    @apply select-none;
  }
</style>
